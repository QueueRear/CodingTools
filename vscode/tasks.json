{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cpp.exe 生成活动文件",
			"command": "D:\\Apps\\Compilers\\mingw64\\bin\\cpp.exe",
			"args": [
				"-g",
				"${file}",
				"-I","D:\\AppData\\Codes\\c_work",// 这里放你头文件所在文件夹的路径，可绝对可相对，注意路径里的转义符号，多个路径的时候注意用逗号隔开
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: D:\\Apps\\Compilers\\mingw64\\bin\\cpp.exe"
		}
	]
}